[uwsgi]

chdir           = /opt/sat/app/
module          = web_server 
callable        = app 

master          = true
processes       = 5

socket        = 0.0.0.0:8000
; chown-socket  = www-data:www-data

; http            = 0.0.0.0:8000
buffer-size=32768

; socket          = /opt/sat/app/flaskapp.sock
; chmod-socket    = 666
; chown-socket  = nginx:nginx

vacuum = true
enable-threads=True
die-on-term = true

pythonpath = /usr/bin/python3
